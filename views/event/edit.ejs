<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>

<div class="container">
<div class="row">
  <div class="col-md-9 offset-md-3">
    <h1 class="col-md-9 offset-md-3">Edit Event</h1>
    <form action="/events/update" method="post">
      
      <div class="form-group mt-4">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" class="form-control" value="<%=event.title%>">
      </div>

      <input type="hidden" name="id" value="<%=event.id%>">

      <div class="form-group mt-4">
        <label for="description">Desciption</label>
        <textarea name="description" rows="4" class="form-control"><%= event.description%></textarea>
      </div>

      <div class="form-group mt-4">
        <label for="location">Location</label>
        <input type="text" name="location" id="location" class="form-control" value="<%= event.location%>">
      </div>

      <div class="form-group mt-4">
        <label for="date">Date</label>
        <input type="date" name="date" id="date" class="form-control" value="<%= eventDate%>">
      </div>
      
      <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </form>
  </div>
</div>



<%- include('../partials/footer') -%>